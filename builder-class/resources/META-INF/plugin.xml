<idea-plugin>
  <id>com.heaven7.plugin.intellij.builderclass</id>
  <name>generate Builder-class</name>
  <version>1.0</version>
  <vendor email="donshine723@gmail.com" url="https://github.com/LightSun/data-mediator">heaven7</vendor>

  <description><![CDATA[
      generate builder class with builder constructor.
    ]]></description>

  <change-notes><![CDATA[
       generate builder class with builder constructor.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="generateBuilderClassNew" class="com.heaven7.plugin.intellij.builderclass.BuilderClassAction"
            text="generate Builder-class"
            description="Generates builder class for any object">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>

</idea-plugin>